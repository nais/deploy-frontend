{
  "name": "nais-deploy-frontend",
  "version": "42.0.0",
  "description": "Frontend for NAIS deploy",
  "author": "@navikt/aura",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn workspaces run build",
    "test": "CI=true yarn workspaces run test",
    "start-watch": "NODE_ENV=development nodemon bin/www",
    "offline": "yarn workspace nais-deploy-frontend run offline",
    "prestart": "cp -R packages/frontend/build dist",
    "start": "node ./bin/www",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "concurrently": "^6.0.2",
    "husky": "^6.0.0",
    "jest": "26.6.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "packages/frontend/*"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,less,css,md,json}": "prettier --write"
  }
}
