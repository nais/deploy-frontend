{
  "name": "nais-deploy-frontend",
  "version": "42.0.0",
  "description": "Frontend for NAIS deploy",
  "author": "@navikt/aura",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build-watch": "parcel watch frontend/index.html",
    "start-watch": "NODE_ENV=development nodemon bin/www",
    "start-offline": "NODE_ENV=development nodemon bin/offline",
    "dev": "concurrently --kill-others \"yarn run start-watch\" \"yarn run build-watch\"",
    "offline": "concurrently --kill-others \"yarn run start-offline\" \"yarn run build-watch\"",
    "build": "parcel build frontend/index.html",
    "test": "jest",
    "tdd": "jest --watch",
    "start": "node  ./bin/www",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "^.+.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "\\-style$": "<rootDir>/server/test/style-mock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/server/test/setupTests.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "frontend/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "resolutions": {
    "**/**/node-forge": "^0.10.0"
  }
}
