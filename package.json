{
  "name": "nais-deploy-frontend",
  "version": "42.0.0",
  "description": "Frontend for NAIS deploy",
  "author": "@navikt/aura",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start-watch": "NODE_ENV=development nodemon bin/www",
    "start-offline": "NODE_ENV=development nodemon bin/offline",
    "dev": "concurrently --kill-others \"yarn run start-watch\" \"yarn run build-watch\"",
    "offline": "concurrently --kill-others \"yarn run start-offline\" \"yarn run build-watch\"",
    "test": "jest",
    "tdd": "jest --watch",
    "start": "node  ./bin/www",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "concurrently": "^6.0.2",
    "husky": "^6.0.0",
    "jest": "26.6.0",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "frontend/*"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,less,css,md,json}": "prettier --write"
  }
}
