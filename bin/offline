#!/usr/bin/env node

const app = require('../packages/server/test/mock/mock-app')
const { logger } = require('../packages/server/src/config')
const http = require('http')

logger.info('Starting up offline server...')
const PORT = 6969

app.set('port', PORT)

let server = http.createServer(app)
server.listen(PORT)
server.on('error', onError)
server.on('listening', onListening)

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error
  }

  switch (error.code) {
    case 'EACCES':
      logger.error(`Port ${PORT} requires elevated privileges`)
      process.exit(1)
    case 'EADDRINUSE':
      logger.error(`Port ${PORT} is already in use`)
      process.exit(1)
    default:
      throw error
  }
}

function onListening() {
  logger.info(
    `Listening on localhost:${PORT}. No AzureAD login and no proxy support in this mode. `
  )
}
